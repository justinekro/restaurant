<div class="container">

	<div class="content">
		<h1>Justikro's Restaurant</h1>
	</div>

	<div class="slideshow-container">
		<p> <%= image_tag 'arrowleft.png', class: "prev", onclick:"plusSlides(-1)"%> </p>
		
		<div class= 'mySlides fade' style = "display:block">
			<%= image_tag 'food.jpg'%>
		</div>

		<div class= 'mySlides fade'>
			<%= image_tag 'food1.jpg'%>
		</div>

		<div class= 'mySlides fade'>
			<%= image_tag 'food2.jpg'%>
		</div>

		<p> <%= image_tag 'arrowright.png', class: "next", id:"next", onclick:"plusSlides(1)"%> </p>
	</div>

	<div class="dots" style="text-align:center">
	  <span class="dot active" onclick="currentSlide(1)"></span> 
	  <span class="dot" onclick="currentSlide(2)"></span> 
	  <span class="dot" onclick="currentSlide(3)"></span> 
	</div>

<!-- Tab content -->
	<div class="tab">
	  <button class="tablinks" onclick="openTab(event, 'About')" id="defaultOpen">About</button>
	  <button class="tablinks" onclick="openTab(event, 'Menu')">Menu</button>
	  <button class="tablinks" onclick="openTab(event, 'Contact')">Contact</button>
	</div>

<!-- Tab content -->
	<div id="About" class="tabcontent">
	  <h3>About this restaurant...</h3>
	  <p>Un super restaurant trop bon</p>
	</div>

	<div id="Menu" class="tabcontent">
	  <h3>Menu</h3>
	  <p>Tout est bon dans le cochon</p> 
	</div>

	<div id="Contact" class="tabcontent">
	  <h3>Contact</h3>
	  <p>Made by justikro with love</p>
	</div>
</div>

<script>
// Get the element with id="defaultOpen" and click on it
document.getElementById("defaultOpen").click();
//document.getElementById("next").click();

</script>